{
    "extends": "./tsconfig.deno.json",
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "outDir": "lib"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}